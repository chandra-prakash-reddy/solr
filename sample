apiVersion: apps/v1
kind: Deployment
metadata:
  name: testapi
spec:
  selector:
    matchLabels:
      app: testapi-app
  replicas: 1
  template:
    metadata:
      labels:
        app: testapi-app
    spec:
      containers:
      - name: testapi-app
        image: gcr.io/mod-sandbox-2/pub-alerts:v1
        imagePullPolicy: Always
        ports:
        - containerPort: 8000
        env:
          - name: PUB_ENV
            value: "demo"
        command: ["sh"]
        args: ["-c","/run.sh $(PUB_ENV) 8000"]
		
		
		
-------------------

apiVersion: v1
kind: Service
metadata:
  name: testapi-app-service
spec:
  selector:
    app: testapi-app
  type: NodePort
  ports:
  - name: http
    port: 8000
    targetPort: 8000
    nodePort: 30036
    protocol: TCP
